<Window x:Class="JBFantasyGame.DMMainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JBFantasyGame"
        mc:Ignorable="d"
        Title="DMMainWin" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid Background= "LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="DMRollDiceBtn" Content="Roll Dice" HorizontalAlignment="Left" Margin="21,18,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.052,0.101" Click="DMRollDiceBtn_Click" FontFamily="Yu Gothic UI Semibold" />
        <TextBox x:Name="RollDieDM" HorizontalAlignment="Left" Height="20" Margin="101,18,0,0" TextWrapping="Wrap" Text="1d6" VerticalAlignment="Top" Width="88" TextInput="RollDieDM_TextInput" FontFamily="Yu Gothic UI Semibold" RenderTransformOrigin="0.886,0.45" />
        <TextBox x:Name="Nameinput"  HorizontalAlignment="Left" Height="38" Margin="21,65,0,0" TextWrapping="Wrap" Text="Name (new or to search for)" VerticalAlignment="Top" Width="120" TextInput="Nameinput_TextInput" RenderTransformOrigin="1.167,-0.174" />
        <Button x:Name="CreateNewCharacter" Content="Create New Character" HorizontalAlignment="Left" Margin="21,103,0,0" VerticalAlignment="Top" Width="120" Click="CreateNewCharacter_Click"/>
        <Button x:Name="CreateNewParty" Content="Create New Party" HorizontalAlignment="Left" Margin="21,123,0,0" VerticalAlignment="Top" Width="120"  RenderTransformOrigin="0.467,1.8"/>
        <Button x:Name="ListParty" Content="List Party Members " HorizontalAlignment="Left" Margin="21,143,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.467,2.2" Click="ListParty_Click" />
        <Button x:Name="ShwCharSht" Content ="Show Char Sheet for"  HorizontalAlignment="Left" Margin="21,163,0,0" VerticalAlignment="Top" Width="120" Height="20" Click="ShwCharSht_Click" />
    </Grid>
</Window>
