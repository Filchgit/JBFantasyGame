<Window x:Class="JBFantasyGame.DMMainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JBFantasyGame"
        mc:Ignorable="d"
        Title="DMMainWin" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid Background= "LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="DMRollDiceBtn" Content="Roll Dice" HorizontalAlignment="Left" Margin="21,18,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.052,0.101" Click="DMRollDiceBtn_Click" FontFamily="Yu Gothic UI Semibold" />
        <TextBox x:Name="RollDieDM" HorizontalAlignment="Left" Height="20" Margin="101,18,0,0" TextWrapping="Wrap" Text="1d6" VerticalAlignment="Top" Width="88" TextInput="RollDieDM_TextInput" FontFamily="Yu Gothic UI Semibold" RenderTransformOrigin="0.886,0.45" />
        <TextBox x:Name="Nameinput"  HorizontalAlignment="Left" Height="38" Margin="21,65,0,0" TextWrapping="Wrap" Text="Orcs" VerticalAlignment="Top" Width="120" TextInput="Nameinput_TextInput" RenderTransformOrigin="1.167,-0.174" />
        <Button x:Name="CreateNewCharacter" Content="Create New Character" HorizontalAlignment="Left" Margin="21,103,0,0" VerticalAlignment="Top" Width="120" Click="CreateNewCharacter_Click"/>
        <Button x:Name="CreateNewParty" Content="Create New Party" HorizontalAlignment="Left" Margin="21,123,0,0" VerticalAlignment="Top" Width="120"  RenderTransformOrigin="0.467,1.8" Click="CreateNewParty_Click"/>
        
        <Button x:Name="ShwCharSht" Content ="Show Char Sheet"  HorizontalAlignment="Left" Margin="348,193,0,0" VerticalAlignment="Top" Width="98" Height="27"  Click="ShwCharSht_Click" RenderTransformOrigin="0.52,0.037" />

        <ListBox x:Name="CurrentPartyList" HorizontalAlignment="Left" Height="85" Margin="348,103,0,0" VerticalAlignment="Top" Width="100" SelectionMode="Extended" SelectionChanged="CurrentPartyList_SelectionChanged" SelectedIndex="0" />
        <Label x:Name="CurrentPartyLabel" Content="Current Party" HorizontalAlignment="Left" Margin="350,70,0,0" VerticalAlignment="Top" Width="98" Height="33" Background="#FFF9F9F9"/>
        
        <Label Name="PartiesAvailable" Content="Available Parties" HorizontalAlignment="Left" Margin="178,70,0,0" VerticalAlignment="Top" Width="104" Background="#FFF7EEEE" Height="33"/>
        <ListBox x:Name="GroupList" HorizontalAlignment="Left" Height="80" Margin="178,103,0,0" VerticalAlignment="Top" Width="165" SelectionChanged="GroupList_SelectionChanged" SelectedIndex="0"/>
        
        <Button x:Name="SaveAll"  Content="Save All All Characters / Parties" HorizontalAlignment="Left" Margin="203,50,0,0" VerticalAlignment="Top" Width="209" Click="SaveAll_Click" />
        <Button x:Name="LoadAll"  Content="Clear and Load All Characters / Parties" HorizontalAlignment="Left" Margin="203,27,0,0" VerticalAlignment="Top" Width="209" Click="LoadAll_Click" Height="23"/>
    </Grid>
</Window>
