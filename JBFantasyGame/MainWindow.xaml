<Window x:Class="JBFantasyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JBFantasyGame"
        mc:Ignorable="d"
        Title="JBFantasyGame" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFDBFBBB">
        <Image HorizontalAlignment="Left" Height="587" VerticalAlignment="Top" Width="792" Source="Quick Jaguar2.jpg" Margin="0,-18,0,0"/>
        <Canvas HorizontalAlignment="Left" Height="569" VerticalAlignment="Top" Width="792">
            <Button x:Name="RunPlayer" Content="Run as Player Character" HorizontalAlignment="Left" VerticalAlignment="Top" Width="252" RenderTransformOrigin="-0.076,0.725" Height="47" FontFamily="Yu Gothic UI Semibold" FontSize="20" Background="#FFD3D09C" Click="RunPlayer_Click" Canvas.Left="49" Canvas.Top="65"/>
            <Button x:Name ="RunDM" Content="Run as Dungeon Master" HorizontalAlignment="Left" VerticalAlignment="Top" Width="252" RenderTransformOrigin="-0.076,0.725" Height="47" FontFamily="Yu Gothic UI Semibold" FontSize="20" Background="#FFD3D09C" Click="RunDM_Click" Canvas.Left="269" Canvas.Top="453" />
        </Canvas>
    </Grid>

</Window>
